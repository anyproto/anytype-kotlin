<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/rounded_rectangle_data_view_action"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btnAdd"
            style="@style/TextView.UXStyle.Body"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text="@string/btn_add" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewer_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editViewContainer" />

        <TextView
            android:id="@+id/btnUploadFromGallery"
            style="@style/TextView.UXStyle.Body"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text="@string/btn_upload_gallery" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewer_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/duplicateViewContainer" />

        <TextView
            android:id="@+id/btnUploadFromStorage"
            style="@style/TextView.UXStyle.Body"
            android:textColor="@color/text_primary"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:text="@string/btn_upload_storage" />

    </LinearLayout>
</FrameLayout>